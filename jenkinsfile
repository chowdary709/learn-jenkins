pipeline {
    agent {
        node {
            label 'workstation-prasad'
        }
    }

    stages {
        stage('time') {
            steps {
            // Run shell command to capture date and time
            script {
                def currentTime = sh(script: 'date', returnStdout: true).trim()
                echo "Current time is: ${currentTime}"
            }
        }
        stage('Build') {
            steps {
                echo 'building..'
            }
        }
        stage('Test') {
            steps {
                echo 'testing..'
            }
        }
        stage('Deploy') {
            steps {
                echo 'deploying..'
            }
        }
    }
}

